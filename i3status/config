# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "disk /"
order += "wireless wlp114s0"
order += "wireless net0"
order += "ethernet net1"
order += "ethernet tun0"
order += "ethernet wg0"
order += "volume master"
order += "battery 0"
order += "load"
order += "cpu_temperature 0"
order += "tztime local"

wireless wlp114s0 {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

wireless net0 {
        format_up = "W: (%quality at %essid) %ip"
        format_down = ""
}

ethernet net1 {
        format_up = "E: %ip"
        format_down = ""
}

ethernet tun0 {
        format_up = "VPN: %ip"
        format_down = ""
}

ethernet wg0 {
        format_up = "WG: %ip"
        format_down = ""
}

volume master {
	format = "♪: %volume"
	format_muted = "♪: muted (%volume)"
	device = "pulse"
}

battery 0 {
	format = " %status %percentage"
	format_down = " No battery"
	status_chr = "~CHR"
	status_bat = "-BAT"
	status_full = "+FULL"
	path = "/sys/class/power_supply/BAT%d/uevent"
	low_threshold = 10
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "/ %avail"
}

cpu_temperature 0 {
        format = "%degrees°C"
        max_threshold = "85"
}
